<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="1dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/guideImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/guideName"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/guideImage"
            android:layout_toRightOf="@+id/guideImage"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/guideDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/guideName"
            android:layout_toEndOf="@+id/guideImage"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="10dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/guidePuntuation"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/guideName"
            android:text="TextView" />

        <Button
            android:id="@+id/btMarkAsActive"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/guideDescription"
            android:text="Active"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/tvLocations"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/guideImage"
            android:text="TextView"
            android:textSize="15dp"
            tools:text="Locations:" />

        <TextView
            android:id="@+id/guideTotalMarkers"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tvLocations"
            android:textSize="15dp"
            android:text="TextView" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
